<div class="main m-4">
  <div class="container">

      <%= cl_image_tag @current_user.avatar.key, width: 300, height: 250, crop: :fill, :quality=>"auto", :fetch_format=>:auto, class: "rounded-circle" %>
    <h3>Hi <%= current_user.nickname %></h3>
    <% if @my_posts.empty? %>
      <p>You haven't created any post yet.................</p>
    <% else %>
        <p>Here are your posts</p>

        <ul class="list-group col-12 col-md-6 col-lg-3">
          <div class="row">
            <% @my_posts.each do |post| %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <span class="badge badge-primary badge-pill">
                  <%= post.title %>
                </span>
                <%= post.title %>
              </li>
            <% end %>
          </div>
        </ul>
    <% end %>
  </div>
  <%= link_to "back", root_path %>
  <br>
  <br>
  <br>
</div>
