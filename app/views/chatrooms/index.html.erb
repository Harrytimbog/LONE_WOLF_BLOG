<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Chatrooms</h1>
  <div class="row">
    <div class="col-md-12">
    <div class="row">


      <% @chatrooms.each do |chatroom| %>
        <div class="col-md-6">
          <div class="card mt-3">
            <div class="card-body">
              <h4><%= link_to chatroom.name, chatroom_path(chatroom.id) %></h4>
              <%= link_to "Join", chatroom_path(chatroom.id), class: "btn btn-primary"  %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>
<br>

  </div>
  <div class='mt-3 mb-2'>
    <% if policy(Chatroom).create? %>
      <%= link_to 'Create Chatroom', new_chatroom_path, class: 'btn btn-info' %>
    <% end %>
  </div>
  <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
</div>
