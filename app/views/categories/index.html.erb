<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Categories</h1>
  <div class="row">
    <div class="col-md-12">
    <div class="row">


      <% @categories.each do |category| %>
        <div class="col-md-6">
          <div class="card mt-3">
            <div class="card-body">
              <h4><%= link_to category.name, category_path(category.id) %></h4>
              <%= link_to "View", category_path(category.id), class: "btn btn-primary"  %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    </div>
<br>

  </div>
  <div class='mt-3 mb-3'>
    <% if policy(Category).create? %>
      <%= link_to 'New Category', new_category_path, class: 'btn btn-info' %> |
    <% end %>
    <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
  </div>
</div>
